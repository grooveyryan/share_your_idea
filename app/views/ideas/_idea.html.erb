<div class="ideas-wrapper">
  <div class="idea">
    <div class="idea-head">
      <div class="user-name">
        <%= idea.user.user_name %>
      </div>
      <div class="time-ago">
        <%= time_ago_in_words idea.created_at %>
      </div>
      <div class="title">
        <%= idea.title %>
      </div>
    </div>
    <div class="content">
      <div class="content-content">
        <%= idea.content %>
      </div>
    </div>
  </div>

</div>
